<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DriverDesk.Pages.AddOrderPage"
             Title="Добавить заказ">
    <VerticalStackLayout Padding="16" Spacing="12">
        <Picker x:Name="CustomerPicker" Title="Выберите заказчика" />
        <Entry x:Name="DescriptionEntry" Placeholder="Описание: 1 штука / 1 рез полный ..."/>
        <DatePicker x:Name="DatePicker" />
        <TimePicker x:Name="TimePicker" />

        <Button Text="Сохранить заказ" Clicked="OnSaveClicked"/>
    </VerticalStackLayout>
</ContentPage>