<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DriverDesk.Pages.AddOrderPage"
             Title="Добавить заказ">

    <ScrollView>
        <VerticalStackLayout Padding="16" Spacing="16">

            <!-- Выбор заказчика -->
            <Border Stroke="LightGray" StrokeShape="RoundRectangle 10" Padding="12">
                <VerticalStackLayout Spacing="8">
                    <Label Text="Выберите или добавьте заказчика" FontAttributes="Bold" FontSize="Medium"/>
                    <Button Text="Выбрать заказчика" 
                            Clicked="OnSelectCustomerClicked"
                            BackgroundColor="#4CAF50" 
                            TextColor="White" 
                            CornerRadius="8"/>
                </VerticalStackLayout>
            </Border>

            <!-- Новый или выбранный заказчик -->
            <Border Stroke="LightGray" StrokeShape="RoundRectangle 10" Padding="12">
                <VerticalStackLayout Spacing="8">
                    <Entry x:Name="NewCustomerNameEntry" Placeholder="Имя заказчика" />
                    <Entry x:Name="NewCustomerPhoneEntry" Placeholder="Телефон" Keyboard="Telephone"/>
                    <Button Text="Позвонить" 
                            Clicked="OnCallClicked"
                            BackgroundColor="#FF9800" 
                            TextColor="White" 
                            CornerRadius="8"/>
                </VerticalStackLayout>
            </Border>

            <!-- Детали заказа -->
            <Border Stroke="LightGray" StrokeShape="RoundRectangle 10" Padding="12">
                <VerticalStackLayout Spacing="8">
                    <Label Text="Детали заказа" FontAttributes="Bold" FontSize="Medium"/>
                    <Entry x:Name="DescriptionEntry" Placeholder="Описание: 1 штука / 1 рез полный ..." />
                    <DatePicker x:Name="DatePicker" />
                    <TimePicker x:Name="TimePicker" />
                </VerticalStackLayout>
            </Border>

            <Button Text="Сохранить заказ" 
                    Clicked="OnSaveClicked"
                    BackgroundColor="#2196F3" 
                    TextColor="White"
                    CornerRadius="8" 
                    HeightRequest="50"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
