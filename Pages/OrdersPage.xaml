<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DriverDesk.Pages.OrdersPage"
             Title="Активные заказы">

    <VerticalStackLayout Padding="12" Spacing="12">

        <!-- Табло статистики -->
        <HorizontalStackLayout Spacing="20" HorizontalOptions="Center">
            <Label x:Name="TotalOrdersLabel" Text="Всего: 0" FontAttributes="Bold"/>
            <Label x:Name="CompletedOrdersLabel" Text="Выполнено: 0" FontAttributes="Bold"/>
            <Label x:Name="PendingOrdersLabel" Text="Не выполнено: 0" FontAttributes="Bold"/>
        </HorizontalStackLayout>

        <!-- Список заказов -->
        <CollectionView x:Name="OrdersView">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Border Stroke="LightGray"
                            StrokeThickness="1"
                            Padding="10"
                            Margin="0,0,0,8"
                            StrokeShape="RoundRectangle 6">
                        <Grid ColumnDefinitions="*,Auto,Auto,Auto" RowDefinitions="Auto,Auto,Auto">
                            <!-- Имя клиента -->
                            <Label Text="{Binding CustomerName}" FontAttributes="Bold"/>

                            <!-- Телефон клиента -->
                            <Label Grid.Row="1" Text="{Binding CustomerPhone}" FontAttributes="Italic" TextColor="Blue"/>

                            <!-- Описание заказа -->
                            <Label Grid.Row="2" Text="{Binding Description}" />

                            <!-- Кнопка звонка -->
                            <Button Grid.Column="1" Grid.Row="2" Text="📞" Clicked="OnCallClicked" Margin="8,0"/>

                            <!-- Кнопка выполнено -->
                            <Button Grid.Column="2" Grid.Row="2" Text="Выполнено" Clicked="OnCompleteClicked" Margin="8,0"/>

                            <!-- Кнопка оплачено -->
                            <Button Grid.Column="3" Grid.Row="2" Text="Оплачено" Clicked="OnPaidClicked"/>
                        </Grid>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>
