<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DriverDesk.Pages.CustomerPage"
             Title="Добавить заказчика">
    <VerticalStackLayout Padding="20" Spacing="15">

        <Entry x:Name="NameEntry" Placeholder="Имя заказчика" />
        <Entry x:Name="PhoneEntry" Placeholder="Телефон" Keyboard="Telephone" />

        <Button Text="Сохранить" Clicked="OnSaveClicked"/>
        <ListView x:Name="CustomerList" ItemSelected="OnItemSelected">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Name}" Detail="{Binding Phone}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

    </VerticalStackLayout>
</ContentPage>