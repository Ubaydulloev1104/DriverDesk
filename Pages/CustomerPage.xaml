<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DriverDesk.Pages.CustomerPage"
             Title="Добавить заказчика">
    <VerticalStackLayout Padding="16" Spacing="12">
        <Entry x:Name="NameEntry" Placeholder="Имя заказчика"/>
        <Entry x:Name="PhoneEntry" Placeholder="Телефон" Keyboard="Telephone"/>

        <Button Text="Сохранить" Clicked="OnSaveClicked"/>

        <CollectionView x:Name="CustomerList" SelectionMode="Single" SelectionChanged="OnSelectionChanged">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="8" ColumnDefinitions="*,Auto">
                        <Label Text="{Binding Name}" />
                        <Label Grid.Column="1" Text="{Binding Phone}" Margin="12,0,0,0"/>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>