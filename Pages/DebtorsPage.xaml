<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DriverDesk.Pages.DebtorsPage"
             Title="Должники">
    <CollectionView x:Name="DebtorsView" Padding="12">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Frame Padding="10" Margin="0,0,0,8" BorderColor="Red">
                    <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto">
                        <Label Text="{Binding CustomerName}" FontAttributes="Bold"/>
                        <Label Grid.Row="1" Text="{Binding Description}" />
                        <Label Grid.Column="1" Text="{Binding PickupDateTime, StringFormat='{0:dd.MM.yyyy HH:mm}'}" />
                        <Button Grid.ColumnSpan="2" Grid.Row="2" Text="Отметить как оплачено" Clicked="OnPaidClicked" Margin="0,8,0,0"/>
                    </Grid>
                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>