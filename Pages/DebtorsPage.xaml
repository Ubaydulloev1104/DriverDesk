<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DriverDesk.Pages.DebtorsPage"
             Title="Должники">
    <Grid Padding="12">
        <CollectionView x:Name="DebtorsView">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Border Stroke="Red"
                            StrokeThickness="1"
                            Padding="10"
                            Margin="0,0,0,8"
                            StrokeShape="RoundRectangle 4">
                        <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto">
                            <Label Text="{Binding CustomerName}" FontAttributes="Bold"/>
                            <Label Grid.Row="1" Text="{Binding Description}" />
                            <Label Grid.Column="1" Text="{Binding PickupDateTime, StringFormat='{0:dd.MM.yyyy HH:mm}'}" />
                            <Button Grid.ColumnSpan="2"
                                    Grid.Row="2"
                                    Text="Отметить как оплачено"
                                    Clicked="OnPaidClicked"
                                    Margin="0,8,0,0"/>
                        </Grid>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>
